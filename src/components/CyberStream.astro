---
import AstroIcon from "./Icons/AstroIcon.astro";
import ReactIcon from "./Icons/ReactIcon.astro";
import JavaScriptIcon from "./Icons/JavaScriptIcon.astro";
import CssIcon from "./Icons/CssIcon.astro";
---

<section
    class="shadow-2xl bg-[#bbb7b728] text-blue-200 px-6 py-10 max-w-7xl rounded-lg w-full"
>
    <div class="text-center mb-8">
        <h2 class="text-3xl text-[#000000c9] font-bold">CyberStream</h2>
        <p class="text-sm text-gray-800">[Descripción Breve del Proyecto]</p>
    </div>

    <!-- Grid principal -->
    <div class="grid grid-cols-1 text-xl md:grid-cols-2 gap-8">
        <!-- Columna Izquierda-->
        <div class="flex flex-col gap-4">
            <!--Primer imagen -->
            <img
                src=""
                alt="[Descripción Imagen 2]"
                class="rounded-lg w-full object-contain transition-transform duration-150 hover:scale-105 hover:shadow-xl bg-gray-300 min-h-[200px]"
            />
            <!-- Segunda imagen -->
            <img
                src=""
                alt="[Descripción Imagen 1]"
                class="rounded-lg w-full object-cover transition-transform duration-150 hover:scale-105 hover:shadow-xl bg-gray-300 min-h-[200px]"
            />
        </div>
        <div class="mb-6">
            <h3 class="text-gray-800 font-bold mb-4">Tecnologías utilizadas</h3>
            <div class="flex flex-wrap gap-3">
                <span
                    class="flex items-center gap-2 px-3 py-1 bg-[#101120] text-white rounded-full text-xs font-semibold shadow-md"
                    ><AstroIcon class="size-4" /> Astro</span
                >
                <span
                    class="flex items-center gap-2 px-3 py-1 bg-[#101120] text-white rounded-full text-xs font-semibold shadow-md"
                    ><ReactIcon class="size-4" /> React</span
                >
                <span
                    class="flex items-center gap-2 px-3 py-1 bg-[#101120] text-white rounded-full text-xs font-semibold shadow-md"
                    ><JavaScriptIcon class="size-4" /> JavaScript</span
                >
                <span
                    class="flex items-center gap-2 px-3 py-1 bg-[#101120] text-white rounded-full text-xs font-semibold shadow-md"
                    ><CssIcon class="size-4" /> CSS</span
                >
            </div>

            <h3 class="text-gray-800 font-bold mb-2 mt-8">
                Problemática abordada
            </h3>
            <p
                class="text-gray-700 font-semibold text-justify max-w-prose mx-auto"
            >
                [Descripción de la problemática abordada...]
            </p>
        </div>
    </div>

    <!-- Columna Derecha -->
    <div class="flex flex-col gap-4">
        <div class="md:col-span-2">
            <h3 class="text-gray-800 text-center font-bold mb-2 mt-6">
                Resolución
            </h3>
            <p class="text-gray-700 font-semibold text-justify mx-12">
                [Descripción de la resolución y funcionalidades clave...]
            </p>
        </div>
    </div>
</section>
